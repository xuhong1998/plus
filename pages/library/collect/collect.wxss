.item{
    border-top:1rpx solid #ddd;
    height: 140rpx;
}
.wx-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
  background: #fff;
  padding: 0 30rpx;
  position:relative;
}
.wx-round{
  width:84rpx;
  height:84rpx;
  background-image:linear-gradient(45deg, #39b54a, #8dc63f);
  border-radius:50%;
  position:relative;
  color:#fff;
  align-items:center;
  display:inline-flex;
  justify-content:center;
}
.wx-content{
  flex: 1;
  padding-left: 20rpx;
}
.wx-rest text{
  transform:translate(1rpx, 1rpx);
  font-size: 24rpx;
  vertical-align: middle;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
}
.wx-rest text:nth-child(1){
  background-color:#0081ff;
  color:#fff;
  border-top-left-radius:10rpx;
  border-bottom-left-radius:10rpx;
}
.wx-rest text:nth-child(2){
  border:1rpx solid #0081ff;
  border-top-right-radius:10rpx;
  border-bottom-right-radius:10rpx;
}
.item .remove{
    width: 90px;
    height: 100%;
    background-color: red;
    position: absolute;
    top: 0;
    right: -90px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size:30rpx;
}
.wx-content-name,.wx-content-writer{
  width:380rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}