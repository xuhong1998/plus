
<view class='wx-head wx-item'>
  <view class='wxui-input'>
      <input class="" maxlength="10" bindinput="bindKeyInput" placeholder="石油" selection-start="-1" selection-end="-1" cursor="-1" value="">    
      </input>
    <view class='iconfont icon-sousuo' bindtap='navigate'></view>
  </view>
</view>
<view class='seek' style='display:{{show? "block":"none"}};'>
  <view class='seek-history seek-content'>
    <view class='seek-content-name'>搜索历史</view>
    <view class='seek-content-list'>
      <view class='' wx:for="{{history}}">{{item}}</view>
    </view>
  </view>
  <view class='seek-history seek-content'>
    <view class='seek-content-name'>热门搜索</view>
    <view class='seek-content-list'>
      <view class='' wx:for="{{history}}">{{item}}</view>
    </view>
  </view>
</view>
<view class="wx-list menu menu-avatar" style='display:{{show? "none":"block"}};'>
    <view class="wx-item item" wx:for="{{list}}">
        <view class="wx-round">
            <text>{{index + 1}}</text>
        </view>
        <view class="wx-content">
            <view class="wx-content-name">{{item.bookName}}</view>
            <view class="wx-content-writer">{{item.author}}</view>
        </view>
        <view class="wx-rest">
            <text>6</text>
            <text>馆藏数</text>    
        </view>
    </view>
</view>